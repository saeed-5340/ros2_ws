---------------------- Install Arduino ------------------------------

python3 -m pip install pyserial       				# Make sure pserial libery is installed
mkdir Arduino
cp ~/Downloads/arduino-ide_2.3.6_Linux_64bit.AppImage ~/Arduino/
cd Arduino/
ls -la
sudo add-apt-repository universe
sudo apt install libfuse2
ls -la
chmod +x arduino-ide_2.3.6_Linux_64bit.AppImage
lsusb   							(Bus 003 Device 007: ID 10c4:ea60 Silicon Labs CP210x UART Bridge)
ls -la /dev | grep ttyACM
ls -la /dev | grep ttyUSB
sudo usermod -a -G dialout saeed
sudo chmod a+rw /dev/ttyUSB0 
ls -la /dev | grep ttyUSB0
cd Arduino
./arduino-ide_2.3.6_Linux_64bit.AppImage

	
