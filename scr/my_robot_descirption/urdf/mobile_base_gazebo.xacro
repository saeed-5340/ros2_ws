<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">


  <gazebo reference="caster_wheel">
        <mu1 value="0.1"/>
        <mu2 value="0.1"/>
  </gazebo>

  <gazebo>
      <plugin filename="gz-sim-diff-drive-system" name="gz::sim::systems::DiffDrive">
          <left_joint>base_wheel_joint_1</left_joint>
          <right_joint>base_wheel_joint_2</right_joint>
          <wheel_separation>0.425</wheel_separation>
          <wheel_radius>0.1</wheel_radius>
          <frame_id>odom</frame_id>
          <child_frame_id>base_footprint</child_frame_id>
      </plugin>
  </gazebo>

  <gazebo>
      <plugin filename="gz-sim-joint-state-publisher-system" name="gz::sim::systems::JointStatePublisher">
          <joint_name>base_wheel_joint_1</joint_name>
          <joint_name>base_wheel_joint_2</joint_name>
      </plugin>
  </gazebo>


  <gazebo>
    <plugin filename = "gz-sim-velocity-control-system" name =  "gz::sim::systems::VelocityControl">
    </plugin>
  </gazebo>



</robot>